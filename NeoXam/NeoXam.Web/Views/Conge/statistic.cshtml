@model IEnumerable<NeoXam.Domain.Entities.conge>

@{
    ViewBag.Title = "statistic selon la Raison";
}
@{
    ViewBag.Title = "Conge statistique selon la Raison";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}
<h2>statistic</h2>



<div id="chartc">
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="https://code.highcharts.com/highcharts.js"></script>
<script src="https://code.highcharts.com/modules/exporting.js"></script>
<script src="https://code.highcharts.com/modules/export-data.js"></script>



<script type="text/javascript">

    var data;
    $.ajax({
        type: "POST",
        url: "http://localhost:43725/Conge/GetStatWeb",
        dataType: 'json',
        success: function (Data) {
            

            ds = JSON.parse(Data);
            Highcharts.chart('chartwebservice', {
                chart: {
                    plotBackgroundColor: null,
                    plotBorderWidth: 0,
                    plotShadow: false
                },
                title: {
                    text: 'Conge<br>statistique<br>',
                    align: 'center',
                    verticalAlign: 'middle',
                    y: 40
                },
                tooltip: {
                    pointFormat: '{series.name}: <b>{point.percentage:.1f}%</b>'
                },
                plotOptions: {
                    pie: {
                        dataLabels: {
                            enabled: true,
                            distance: -50,
                            style: {
                                fontWeight: 'bold',
                                color: 'white'
                            }
                        },
                        startAngle: -90,
                        endAngle: 90,
                        center: ['50%', '75%'],
                        size: '110%'
                    }
                },
                series: [{
                    type: 'pie',
                    name: 'Conge statistique selon la Raison',
                    innerSize: '50%',
                    data: ds
                }]
            });



           
        }
                                                   ,
        error: function (error) {
            console.log(error);
        }
    });


    $.ajax({
        type: "POST",
        url: "http://localhost:43725/Conge/GetStat",
        dataType: 'json',
        success: function (Data) {

            var tb = [];
            //ds = JSON.parse(Data);
            $.each(Data, function (index, key) {
                console.log(key.Key);
                t = [key.Key, key.Count];
                tb.push(t);
            });
            console.log(tb);

            Highcharts.chart('chartc', {
                chart: {
                    plotBackgroundColor: null,
                    plotBorderWidth: null,
                    plotShadow: false,
                    type: 'pie'
                },
                title: {
                    text: 'Statistique conge'
                },
                tooltip: {
                    pointFormat: '{series.name}: <b>{point.percentage:.1f}%</b>'
                },
                plotOptions: {
                    pie: {
                        allowPointSelect: true,
                        cursor: 'pointer',
                        dataLabels: {
                            enabled: true,
                            format: '<b>{point.name}</b>: {point.percentage:.1f} %',
                            style: {
                                color: (Highcharts.theme && Highcharts.theme.contrastTextColor) || 'black'
                            }
                        }
                    }
                },
                series: [{
                    name: 'Brands',
                    colorByPoint: true,
                    data:tb
                }]
            })




        }
                                                   ,
        error: function (error) {
            console.log(error);
        }
    });
  







    
</script>
