@model NeoXam.Web.Models.salaire

@{
    ViewBag.Title = "Modifer";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

<h2>Modifier Salaire</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>salaire</h4>
        <hr />
